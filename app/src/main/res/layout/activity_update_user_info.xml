<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/national_emblem"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="请输入修改后的信息"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <FrameLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/registerInputElements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入名字"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/mailEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入邮箱地址"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/birthdayEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入生日"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/provinceEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入省份"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/cityEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入城市"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/districtEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入县区"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/jobEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入职业"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/sexEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入性别"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/passwordEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edittext"
                android:hint="请输入密码"
                android:importantForAutofill="no"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/plain"
                android:textSize="@dimen/sp_20"
                tools:ignore="TextFields" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_35"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_20" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
